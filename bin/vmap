#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))

require 'io/console'

require 'icfpc2012'

$stdout.flush

def read_map
  Icfpc2012::Map.new(File.read('./maps/contest1.map.txt'))
end

def print_map(map)
  map.to_s.each_line do |line|
    puts line
  end
end

$stdin.raw!

def read_step
  $stdin.getc.chr.capitalize.tap { |s| puts s }
end

begin
  map = read_map
  while true
    puts ''
    print_map(map)
    step = read_step
    map = map.step(step)
    raise Interrupt if step.chr == "A"
  end
rescue Interrupt
  pute 'Quitting...'
  exit 1
end

# Output message to $stderr, prefixed with the program name
def pute(message="")
  $stderr.puts "#{$0}: #{message}"
end
