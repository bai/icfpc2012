#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))

require 'io/console'

require 'icfpc2012'

def read_map
  Icfpc2012::Map.new(File.read('./maps/contest1.map.txt'))
end

def print_map map
  map.to_s.split('\n').each do |line|
    puts line
  end
end

$stdin.raw!

def read_step
  step = $stdin.getc
  step = step[0].capitalize
  puts step
  step
end

map = read_map
while true
  puts ''
  print_map map
  step = read_step
  map = map.step step
  if step[0] == "A"
    break;
  end
end
